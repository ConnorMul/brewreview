<div class="new-brew-form">
    <% if flash[:user_errors] %>
        <% flash[:user_errors].each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
    <h1>Edit your profile details here</h1>
    <%= form_for @user do |f| %>
        <label>Username</label>
        <%= f.text_field :name %>
        <br>
        <br>
        <label for="password">New Password</label>
        <%= f.password_field :password %>
        <br>
        <br>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <br>
        <br>
        <%= f.label :age %>
        <%= f.number_field :age %>
        <br>
        <br>
    <%= f.submit class: "btn btn-warning"%>
    <% end %>
</div>