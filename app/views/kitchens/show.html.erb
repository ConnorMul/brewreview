<h1>Welcome to Your Kitchen</h1>
<% if @current_user.reviews.length > 0 %>
    <h3>Here are some of your current reviews</h3>
<% else %>
    <h3>Your Reviews will show up here!</h3>
<% end %>
<div class='index-container'>
<% @current_user.cocktails.each do |ct| %>
    <div class='index-tile'>
    <h5><%= ct.drink %></h5>
    <%= image_tag ct.img_url, class: 'index-img' %>
    <% ct.reviews.each do |review| %>
      <p><%= review.content %></p>
       <p><%= review.stars %></p>
       <%= button_to "Delete This Review", review_path(review), method: :delete %>
    <% end %>
    </div>
<% end %>
</div>

