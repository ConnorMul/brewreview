    <div class='new-brew-form'>
    <h1>Change this review</h1>

    <%= form_for @review do |f| %>
        <%= f.label :cocktail_id %><br />
        <%= f.collection_select :cocktail_id, Cocktail.all, :id, :drink %><br />

        <%= f.label :stars %>
        <div class="rating_selection">

        <%= f.radio_button :stars, 1 %> 
        <label for="review_rating_1">
        <span>⭐</span></label>
        <br>
        <%= f.radio_button :stars, 2 %> 
        <label for="review_rating_2">
        <span>⭐⭐</span></label>
        <br>
        <%= f.radio_button :stars, 3 %> 
        <label for="review_rating_3">
        <span>⭐⭐⭐</span></label>
        <br>
        <%= f.radio_button :stars, 4 %> 
        <label for= "review_rating_4">
        <span>⭐⭐⭐⭐</span></label>
        <br>
        <%= f.radio_button :stars, 5 %> 
        <label for="review_rating_5">
        <span>⭐⭐⭐⭐⭐</span></label>
    <br />
    
    <%= f.label :content %><br />
        <%= f.text_area :content %>
        <%= f.hidden_field :user_id, value: @current_user.id  %>
    <br />
        <%= f.submit "Review", class: "btn btn-warning", style: "margin-top: 10px;" %>
    <% end %>
<br>
</div>
